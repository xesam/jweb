<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <context-param>
        <param-name>ctx-param-1</param-name>
        <param-value>this is ctx-param-1</param-value>
    </context-param>
    
    <context-param>
        <param-name>ctx-param-2</param-name>
        <param-value>this is ctx-param-2</param-value>
    </context-param>

    <servlet>
        <servlet-name>helloServlet1</servlet-name>
        <servlet-class>io.github.xesam.jweb.HelloServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>helloServlet2</servlet-name>
        <servlet-class>io.github.xesam.jweb.HelloServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloServlet1</servlet-name>
        <url-pattern>/greeting1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>helloServlet2</servlet-name>
        <url-pattern>/greeting2</url-pattern>
    </servlet-mapping>
</web-app>
